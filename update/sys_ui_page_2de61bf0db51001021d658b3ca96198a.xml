        <client_script><![CDATA[function validateComments() {
	g_form.clearMessages();
	var comments = gel("dialog_comments").value;
	comments = trim(comments);
	
	if (comments == '') {
		GlideModal.get().destroy();
		g_form.addErrorMessage('Por favor informe uma justificativa.');
		return;
	}
	
	g_form.setValue('ca_log', g_form.getValue('ca_log') + '\n' + g_form.getValue('ca_justificativa'));
	g_form.setValue("ca_justificativa", comments);
	g_form.setValue('ca_log', g_form.getValue('ca_log') + '\nJustificativa: ' + comments);
	g_form.setValue('ca_status', 9);
	g_form.submit();
	g_form.addInfoMessage('Documento reprovado.');
}]]></client_script>
        <description/>
        <direct>false</direct>
